{
  "name": "PigGo",
  "timezoneOffset": "+0800",
  "schema": "NexusPHP",
  "collaborator":"xqw8889",
  "description": "做一个有温度的PT站",
  "url": "https://piggo.me/",
  "icon": "https://piggo.me/favicon.ico",
  "tags": [
    "综合",
    "3D原盘",
    "儿童区"
  ],
  "host": "piggo.me",
  "formerHosts": [
    "piggo.me"
  ],
  "plugins": [
    {
      "name": "种子列表",
      "pages": [
        "/special.php"
      ],
      "scripts": [
        "/schemas/NexusPHP/common.js",
        "/schemas/NexusPHP/torrents.js"
      ]
    }
  ],
  "searchEntry": [
    {
      "entry": "/torrents.php?search=$key$",
      "name": "综合",
      "enabled": true
    },
    {
      "entry": "/torrents.php?tag_id=8&search=$key$",
      "name": "3D圆盘",
      "enabled": true
    },
    {
      "entry": "/special.php?search=$key$",
      "name": "儿童专区",
      "enabled": true
    }
  ],
  "selectors": {
    "userSeedingTorrents": {
      "page": "/getusertorrentlistajax.php?userid=$user.id$&type=seeding",
      "fields": {
        "seeding": {
          "selector": ["b:first"],
          "filters": ["query.text()"]
        },
        "seedingSize": {
          "selector": "",
          "filters": [
            "query.text().match(/总大小：(.*?)</g)",
            "(query && query.length>0 ) ? query[0].replace('总大小：', '').replace('<', '').trim() : 0",
            "(query != 0) ? _self.getTotalSize([query]) : 0"
          ]
        }
      }
    }
  },
  "searchEntryConfig": {
    "fieldSelector": {
      "progress": {
        "selector": ["> td:eq(9)"],
        "filters": ["query.text()=='--'?null:parseFloat(query.text())"]
      },
      "status": {
        "selector": ["> td:eq(9)"],
        "filters": [
          "query.text()==='--'?null:(parseFloat(query.text())==100?255:3)"
        ]
      }
    }
  }
  
}
